{
    "name": "modelflow-ai/prompt-template",
    "description": "Templating library for ai prompts.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "ai",
        "prompts template",
        "prompts",
        "template"
    ],
    "autoload": {
        "psr-4": {
            "ModelflowAi\\PromptTemplate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ModelflowAi\\PromptTemplate\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Johannes Wachter",
            "email": "johannes@sulu.io"
        }
    ],
    "require": {
        "php": "^8.2",
        "modelflow-ai/chat": "^0.3"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.15",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10, <1.10.55",
        "phpstan/phpstan-phpunit": "^1.3@stable",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^0.18.1",
        "asapo/remove-vendor-plugin": "^0.1"
    },
    "scripts": {
        "test-with-coverage": "@test --coverage-php var/reports/coverage.cov --coverage-cobertura=var/cobertura-coverage.xml --coverage-html var/reports/html --log-junit var/reports/junit.xml",
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ],
        "phpstan": "@php vendor/bin/phpstan analyze",
        "lint-rector": "@php vendor/bin/rector process --dry-run",
        "lint-php-cs": "@php vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "lint": [
            "@phpstan",
            "@lint-php-cs",
            "@lint-rector",
            "@lint-composer"
        ],
        "lint-composer": "@composer validate --strict",
        "rector": "@php vendor/bin/rector process",
        "php-cs-fix": "@php vendor/bin/php-cs-fixer fix",
        "fix": [
            "@rector",
            "@php-cs-fix"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../*",
            "options": {
                "symlink": false
            }
        }
    ],
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "asapo/remove-vendor-plugin": true
        }
    },
    "extra": {
        "remove-folders": [
            "modelflow-ai/*/vendor"
        ]
    }
}
